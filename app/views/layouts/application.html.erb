      <font><%= @page_title || "My shiny blog" %></font>
    <% end %>
    </div>
  
    <div id="columns">
      <div id="links">
      	<table align=left>
      		<tr>
      			<td width=7%>
      				<a href="/entries">Home</a>
      			</td>
      			<td width=7%>
      			  <a href="/shop">Shop</a>
      			</td>
      			<td width=7%>
      			  <a href="/about">About</a>
      			</td>
      			<td width=10%>
      			  <a href="/contact">Contact</a>
      			</td>
      			<td width=69%>   		    			
      			</td>      		
      		</tr>
      	</table>
      </div><br />
      <div id="content">
        <%= yield %>
      </div>    
    </div><br /><br />
    <div id="ft">      
      <% if session[:user_id] %>
      	<%= link_to image_tag("logout.png", :border => 0), logout_path, :method => :delete %>
      <% else %>
        <%= link_to image_tag("login.png", :border => 0), login_path, :method => :create %>
	    <% end %>	
	    Yekaterina Zhmud, 2013	  
    </div>
  </div>
</body>
</html>
