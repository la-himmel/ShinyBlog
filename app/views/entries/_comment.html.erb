<div id="comment">
  <i><h4><%=h comment.name %> says:</h4></i>  
  <% if session[:user_id] %>    
    <%= link_to image_tag("delete.png", :border => 0, :title => "Delete"), comment, :method => :delete, data: { confirm: 'Are you sure?' }  %>          
  <% end %>
  
  <div id="comment_text">
    <%= simple_format h(comment.body) %>
  </div>
  
</div>