<table>
  
<% @entries.each do |entry| %>
  <tr><div id="entry">
    <p>
      <h2><b><%= link_to entry.title, entry %></b></h2>
    </p>
    
    <p>
      <%= entry.body.html_safe %>      
    </p>

    <p>
      <b>Tag:</b>
      <%= entry.tag %>
    </p>

    <p class="date">
      <%= entry.date %>
    </p>

  </div></tr>
<% end %>
</table>

<br />

<%= link_to 'New Entry', new_entry_path %>


